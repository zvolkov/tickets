@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width">
        <link href="~/Content/css" rel="stylesheet" />

        <script src="~/Scripts/modernizr-2.7.1.js"></script>
        <script src="~/Scripts/respond.min.js"></script>

        <script src="/Scripts/require_cfg.js"></script>
        @if (!HttpContext.Current.IsDebuggingEnabled){<script> require.urlArgs = "v=@(Global.Version)"; </script>}
        <script src="/Scripts/require.js"></script>
        
        @RenderSection("Styles", required: false)
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Tickets Reference App</a>
                </div>
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("Logout", "Account", null, FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                    {
                        <input type="submit" class="form-control" value="Log off" />
                    }
                    <span class="navbar-text navbar-right">Logged on as <strong>@User.Identity.GetUserName()</strong></span>
                }
            </div>
        </nav>

        <div class="container">
            @RenderBody()

            <footer>
                <p>&copy; NIAID/SEB 2014</p>
            </footer>
        </div>

        @RenderSection("Scripts", required:false)
    </body>
</html>